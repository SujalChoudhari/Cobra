// Test for exceptions and try-catch-finally blocks

print("--- Exception Handling Tests ---");

// Test 1: Basic try-catch
print("Test 1: Basic try-catch");
try {
    print("Inside try block (before throw)");
    throw "This is a test exception!";
    print("Inside try block (after throw) - should not be printed");
} catch (string e) {
    print("Caught exception: " + e);
}
print("");

// Test 2: Try-finally (no exception)
print("Test 2: Try-finally (no exception)");
try {
    print("Inside try block");
} finally {
    print("Inside finally block");
}
print("");

// Test 3: Try-catch-finally
print("Test 3: Try-catch-finally");
try {
    print("Inside try block (before throw)");
    throw "Another test exception!";
    print("Inside try block (after throw) - should not be printed");
} catch (string e) {
    print("Caught exception: " + e);
} finally {
    print("Inside finally block");
}
print("");

